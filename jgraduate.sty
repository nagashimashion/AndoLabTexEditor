% ページレイアウト
\def\ps@jgraduate{%
  \let\@mkboth\markboth%
  \def\@oddhead{\underline{\hbox to \textwidth{~~\bf\rightmark\hfil%
        \thepage~~}}}%
  \let\@evenhead\@oddhead%
  \def\@oddfoot{$\overline{\hbox to \textwidth{\hfil%
        \@university\ \@department\ \@major \ \ifx\@program\empty \@course \else \@program \fi~~}}$}%
  \let\@evenfoot\@oddfoot%
  \def\chaptermark##1{\markright{%
    \@chapapp\space\thechapter\space\@chappos~~~##1}}%
}

% 表紙
\def\maketitle{
 \setcounter{page}{-2}
 \begin{titlepage}%
  \null
  \vfill%
  \centering%
   {\Large \@academicyear \ \ifx\@examiner\empty 卒業論文 \else 修士論文 \fi}\vskip 1em%
   {\huge\textbf\@title\par} \vskip 3.5em minus 1em%
   \vfill
   \ifx\@examiner\empty
      {\Large 指導教員} \vskip 0.5em {\Large \@supervisor} \\ {\Large \@assistantsv}
      \vskip 4.0em
   \else
      \vfill
      {\Large 指導教員} \vskip 0.5em {\Large \@supervisor} \\ {\Large \@assistantsv} \vskip 2.5em minus 1em%
      {\Large 主査} \vskip 0.5em {\Large \@examiner}\vskip 3.5em minus 1em
      \vfill
   \fi
   {\large\@university \ \@department \par} \vskip -0.5em
   {\large\@major \ \ifx\@program\empty \@course \else \@program \fi \par}%
   {\Large 学籍番号 \@studentid\par} \vskip -1em%
   {\Large\@author\par}\vskip 1em%
   {\large\@date}\vskip 2.5em minus 1em%
   \vfill
 \end{titlepage}%
}

% 概要
\renewenvironment{abstract}{%
 \setcounter{page}{0}
 \pagenumbering{Roman}
 \thispagestyle{empty}
  \if@twocolumn
    \section*{\abstractname}%
    \begin{quotation}%
  \else
    \@mkboth{\abstractname}{\abstractname}%
    \vspace*{50\p@}%
    {%
     \parindent \z@ \raggedright
     \reset@font\huge\bfseries
     \interlinepenalty\@M
     \center{\abstractname}\par\nobreak
     \vskip 40\p@
    }%
    \begin{quotation}%
  \fi}{\end{quotation}\newpage}


% 目次
\def\tableofcontents{%
 \setcounter{page}{0}
 \pagenumbering{roman}
 \if@twocolumn\@restonecoltrue\onecolumn
 \else\@restonecolfalse\fi
 \chapter*{\contentsname}%
 \@mkboth{\contentsname}{\contentsname}%
 \@starttoc{toc}%
 \if@restonecol\twocolumn\fi
 \newpage
}

% 章関係
\def\chapter{%
 \if@openright\cleardoublepage\else\clearpage\fi
 \global\@topnum\z@
 \@afterindenttrue
 \secdef\@chapter\@schapter}

\def\@makechapterhead#1{%
  \vspace*{50\p@}%
  {%
   \parindent \z@ \raggedright
   \reset@font\huge\bfseries
   \ifnum \c@secnumdepth >\m@ne
    \@chapapp\thechapter\@chappos
    \par\nobreak
    \vskip 20\p@
   \fi
   \interlinepenalty\@M
   #1\par\nobreak
   \vskip 40\p@
  }%
}

\def\@makeschapterhead#1{%
 \vspace*{50\p@}%
 {%
  \parindent \z@ \raggedright
  \reset@font\huge\bfseries
  \interlinepenalty\@M
  #1\par\nobreak
  \vskip 40\p@
 }%
}

